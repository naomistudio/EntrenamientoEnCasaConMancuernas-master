<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_exercise_develop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    card_view:cardBackgroundColor="@color/colorPrimaryDark"
    card_view:cardElevation="6dp"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/civLogoUser"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_drag_indicator" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Flexiones de Biceps"
                android:textColor="@android:color/white"
                android:textSize="@dimen/standard_text_size"/>


        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_view_en"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifIVExerciseItem"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/image_flexiones_biceps_de_pie" />

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>